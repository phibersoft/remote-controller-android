<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rcContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"

    android:orientation="horizontal">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_gravity="center_vertical"
        android:columnCount="5"
        android:orientation="horizontal"
        android:padding="10dp"
        android:rowCount="2"
        android:useDefaultMargins="true">

        <ImageButton
            android:id="@+id/rcSoundDown"
            style="@style/StatusButton"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:src="@drawable/ic_baseline_volume_down_24" />

        <ImageButton
            android:id="@+id/rcSoundUp"
            style="@style/StatusButton"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_volume_up_24"

            />


        <ImageButton
            android:id="@+id/rcLeft"
            style="@style/StatusButton"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_skip_previous_24"

            />

        <ImageButton
            android:id="@+id/rcPlay"
            style="@style/StatusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_play_arrow_24"

            />

        <ImageButton
            android:id="@+id/rcRight"
            style="@style/StatusButton"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:src="@drawable/ic_baseline_skip_next_24"

            />

        <ImageButton
            android:id="@+id/rcPrev"
            style="@style/StatusButton"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:src="@drawable/ic_baseline_keyboard_arrow_left_24" />

        <ImageButton
            android:id="@+id/rcNext"
            style="@style/StatusButton"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"

            />


        <ImageButton
            android:id="@+id/rcTab"
            style="@style/StatusButton"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_keyboard_tab_24"

            />

        <ImageButton
            android:id="@+id/rcEnter"
            style="@style/StatusButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_keyboard_return_24"

            />

        <ImageButton
            android:id="@+id/rcFullScreen"
            style="@style/StatusButton"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:src="@drawable/ic_baseline_open_in_full_24"

            />
    </GridLayout>

</LinearLayout>